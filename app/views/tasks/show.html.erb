<h1><%= @task.id %>個目のタスク</h1>

<table class="table table-bordered">
  <tr>
    <th>タスクの状態</th>
    <td><%=@task.status %></td>
  </tr>
  <tr>
    <th>タスク内容</th>
    <td><%= @task.content %></td>
  </tr>
  <tr>
    <th>タスク発生日時</th>
    <td><%= @task.created_at %></td>
  </tr>
  <tr>
    <th>タスク内容変更日時</th>
    <td><%= @task.updated_at %></td>
  </tr>
</table>

<%= link_to 'タスク一覧に戻る', tasks_path %>
<%= link_to 'このタスクを編集する', edit_task_path(@task), class: "btn btn-default" %>
<%= link_to 'このタスクを削除する', @task, method: :delete, data: { confirm: '本当に削除してよろしいですか？' }, class: "btn btn-danger" %>
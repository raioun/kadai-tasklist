<% if logged_in? %>
  <p>ログイン完了ユーザ: <%= current_user.name %></p>

  <h1><%= current_user.name %> さんのタスク一覧</h1>
  
  <% if @tasks.any? %>
    <table class="table table-striped">
      <thead>
        <tr>
          <th>id</th>
          <th>状態</th>
          <th>タスク</th>
          <th>詳細ページ</th>
        </tr>
      </thead>
      <tbody>
        <% @tasks.each do |task| %>
        <tr>
          <td><%= task.id %></td>
          <td><%= task.status %></td>
          <td><%= task.content %></td>
          <td><%= link_to 'このタスクの詳細を開く', task %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
    <div>
    <<%= paginate @tasks %>
    </div>
  <% end %>

  <%= link_to '新規タスクの追加', new_task_path, class: "btn btn-primary" %>
<% else %>
  <div class="center jumbotron">
    <div class="text-center">
      <h1>Let's start the tasklist!</h1>
      <%= link_to 'Sign up now!', signup_path, class: 'btn btn-lg btn-primary' %>
    </div>
  </div>
<% end %>